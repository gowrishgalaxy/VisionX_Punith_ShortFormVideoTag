  "author": "Video AI Pipeline",
  "model_architecture": {
    "type": "CustomCNN",
    "input_size": [
      128,
      128
    ],
    "input_channels": 3,
    "num_classes": 6,
    "class_names": [
      "animation",
      "outdoor",
      "indoor",
      "action",
      "dialogue",
      "transition"
    ],
    "layers": {
      "feature_extractor": [
        "Conv2d(3->32, kernel=3x3)",
        "BatchNorm2d(32)",
        "ReLU",
        "MaxPool2d(2x2)",
        "Dropout(0.25)",
        "Conv2d(32->64, kernel=3x3)",
        "BatchNorm2d(64)",
        "ReLU",
        "MaxPool2d(2x2)",
        "Dropout(0.25)",
        "Conv2d(64->128, kernel=3x3)",
        "BatchNorm2d(128)",
        "ReLU",
        "AdaptiveAvgPool2d(7x7)"
      ],
      "classifier": [
        "Dropout(0.5)",
        "Linear(6272->256)",
        "ReLU",
        "Dropout(0.5)",
        "Linear(256->6)"
      ]
    }
  },
  "training_details": {
    "dataset": "Synthetic + Video Frames",
    "total_samples": "100+",
    "epochs_trained": 5,
    "batch_size": 8,
    "learning_rate": 0.001,
    "optimizer": "Adam",
    "loss_function": "CrossEntropyLoss",
    "validation_accuracy": "50-70%",
    "framework": "PyTorch 2.1.0"

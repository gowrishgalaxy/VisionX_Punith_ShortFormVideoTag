  "tag_generation": {
    "confidence_levels": {
      "high": {
        "threshold": 0.8,
        "tags": [
          "high_confidence",
          "clear",
          "well_defined"
        ]
      },
      "medium": {
        "threshold": 0.5,
        "tags": [
          "medium_confidence",
          "reasonable"
        ]
      },
      "low": {
        "threshold": 0.0,
        "tags": [
          "low_confidence",
          "uncertain",
          "ambiguous"
        ]
      }
    },
    "color_analysis": {
      "brightness": {
        "high": {
          "threshold": 180,
          "tags": [
            "bright",
            "well_lit",
            "luminous"
          ]
        },
        "low": {
          "threshold": 80,
